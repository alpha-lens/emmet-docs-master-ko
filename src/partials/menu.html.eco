<% renderMenu = (items) => %>
<ul class="nav">
	<% for item in items: %>
		<li class="nav__item<% if item.state: %> nav__item_selected<% end %>">
			<% if item.state != 'current': %>
				<a href="<%= item.url %>"><%= item.title %></a>
			<% else: %>
				<strong><%= item.title %></strong>
			<% end %>
			<% if item.children: %>
				<%- renderMenu(item.children) %>
			<% end %>
		</li>
	<% end %>
</ul>	
<% end %>
<%= renderMenu @menuItems %>